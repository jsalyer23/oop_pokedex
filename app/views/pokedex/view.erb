<!-- This page will display a user's Pokemon's specific details as they are stored in the database. From this page, a user will be able to get a page where they can edit these details. -->
<script type="text/javascript" src="/js/toggleEvolution.js"></script>
<div class="header">
<!-- Name of Pokemon being viewed -->
	<%= @pokemon.name %>
</div>

	<div>
	<!-- Image of Pokemon being viewed -->
		<img class="viewImage" src="/images2/<%= @pokemon.name %>.png" />
	</div>


	<div class="evolutions">
		<div class="evolutions__text">
			Evolution Path
		</div>
		<div id="showText">
			Show/Hide Evolutions
		</div>
		<div id="hideText">
			Hide Evolutions
		</div>
	<% if @evolutions.stage1 != "None" %>
		<div id="toggle">
			<div class="evoWrapper">
				<div class="evolutions__image">
			<!-- Image of Pokemon being viewed -->
				<img class="evoImage" src="/images2/<%= @evolutions.stage1 %>.png" />
				<div class="stage"><%= @evolutions.stage1 %></div>
				</div>

	<% end 

		if @evolutions.stage2 != "None" && @evolutions.stage2 != ""  %>

			<!-- Image of Pokemon being viewed -->
				<div class="evolutions__image">
				<img class="evoImage" src="/images2/<%= @evolutions.stage2 %>.png" />
				<div class="stage"><%= @evolutions.stage2 %></div>
				</div>
 	<%  end 

		if @evolutions.stage3 != "None" && @evolutions.stage3 != ""%>

			<!-- Image of Pokemon being viewed -->
				<div class="evolutions__image">
				<img class="evoImage" src="/images2/<%= @evolutions.stage3 %>.png" />
				<div class="stage"><%= @evolutions.stage3 %></div>
				</div>
			</div>
 	<% end %>
 		</div>
	</div>

<div class="statsContainer">

	<div class="stats">
		<div class="stats__title">
			Height:
		</div> 
		<div class="stats__info">
			<%=  @pokemon.height %> in
		</div>
	</div>

	<div class="stats">
		<div class="stats__title">
			Weight:
		</div>
		<div class="stats__info">
			<%= @pokemon.weight%> lbs
		</div>
	</div>

	<div class="stats">
		<div class="stats__title">
			Gender:
		</div>
		<div class="stats__info">
			<%= @pokemon.gender %>
		</div>
	</div>

	<div class="stats">
		<div class="stats__title">
			Type:
		</div>
		<div class="stats__info">
			<%= @type1 %> <%= @type2 %>
		</div>
	</div>

	<div class="stats">
		<div class="stats__title">
			CP:
		</div>
		<div class="stats__info">
			<%= @pokemon.cp %>
		</div>
	</div>

	<div class="stats">
		<div class="stats__title">
			HP:
		</div>
		<div class="stats__info">
			<%= @pokemon.hp %>
		</div>
	</div>		

	<div class="stats">
		<div class="stats__title">
			Favorite:
		</div>

	<% if @pokemon.favorite == true || @pokemon.favorite == "true" %>

		<div class="stats__info">
			<img class="favoriteHeart" src="/images2/heart.png" alt="Heart" />
		</div>

	<% else %>

		<div class="stats__info">
			NO
		</div>

	<% end %>
	</div>
	
</div>

	<div class="editText">
		<a href="/edit?id=<%= @pokemon.id %>">Edit Information</a>
	</div>