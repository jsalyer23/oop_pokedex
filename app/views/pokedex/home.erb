<script type="text/javascript" src="/js/randomTimer.js"></script>

<div class="header">
	Personal Pok&eacute;dex
</div>

<% if @favorite == nil %>

<div class="noPokemonError">
	<%= @no_pokemon_error %>
</div>

<% else %>

<div class="random">
<img class="viewImage" src="/images2/<%= @favorite.name %>.png" />

	<div class="statsContainer">
	
		<div class="stats">
			<div class="stats__title">
				Name:
			</div> 
			<div class="stats__info">
				<%= @favorite.name %>
			</div>
		</div>

		<div class="stats">
			<div class="stats__title">
				Height:
			</div>
			<div class="stats__info">
				<%= @favorite.height %> in
			</div>
		</div>

		<div class="stats">
			<div class="stats__title">
				Weight:
			</div> 
			<div class="stats__info">
				<%= @favorite.weight %> lbs
			</div>
		</div>

		<div class="stats">
			<div class="stats__title">
				Gender:
			</div>
			<div class="stats__info">
				<%= @favorite.gender %>
			</div>
		</div>

		<div class="stats">
			<div class="stats__title">
				Type:
			</div>
			<div class="stats__info">
				<%= @type1 %> <%= @type2 %>
			</div>
		</div>

		<div class="stats">
			<div class="stats__title">
				CP:
			</div>
			<div class="stats__info">
				<%= @favorite.cp %>
			</div>
		</div>

		<div class="stats">
			<div class="stats__title">
				HP:
			</div>
			<div class="stats__info">
				<%= @favorite.hp %>
			</div>
		</div>

		<div class="stats">
			<div class="stats__title">
				Favorite:
			</div>
	<% if @favorite.favorite == "yes"%>

		<div class="stats__info">
			<img class="favoriteHeart" src="/images2/heart.png" alt="Heart" />
		</div>

	<% else %>

		<div class="stats__info">
			NO
		</div>

	<% end %>
		</div>
		
	</div>
</div>

<% end %>
